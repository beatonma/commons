<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_member_profile_scene"
    tools:context=".app.MainActivity">

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:contentDescription="todo"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name"
        style="@style/Text.Primary.Header"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/portrait"
        tools:text="@tools:sample/full_names" />

    <View
        android:id="@+id/accent_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/member_profile_accent_line_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/portrait"
        tools:background="@color/party_labour"/>

    <include
        android:id="@+id/snippet"
        style="@style/ProfileSnippet"
        layout="@layout/fragment_member_profile_snippet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/recyclerview"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/load_member_votes"
        android:text="Load member votes"
        style="@style/Button.Raised"/>


</androidx.constraintlayout.motion.widget.MotionLayout>
