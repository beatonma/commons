<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/view_social_scene"
    >

    <TextView
        android:layout_width="0dp"
        android:id="@+id/title"
        android:textAlignment="center"
        tools:text="@tools:sample/full_names"
        style="@style/Text.Primary.H1"/>


    <TextView
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        style="@style/Text.Primary"
        tools:text="201"
        />

    <TextView
        android:id="@+id/vote_up_count"
        android:layout_width="wrap_content"
        style="@style/Text.Primary"
        tools:text="32"
        />

    <TextView
        android:id="@+id/vote_down_count"
        android:layout_width="wrap_content"
        style="@style/Text.Primary"
        tools:text="23"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/comment_count_icon"
        android:layout_width="@dimen/icon_size_large"
        android:layout_height="@dimen/icon_size_large"
        android:padding="@dimen/touchable_icon_padding"
        android:contentDescription="@string/content_description_social_comment_count"
        app:srcCompat="@drawable/ic_comment"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/vote_up"
        android:layout_width="@dimen/icon_size_large"
        android:layout_height="@dimen/icon_size_large"
        android:minHeight="@dimen/min_touch_target_size"
        android:padding="@dimen/touchable_icon_padding"
        android:contentDescription="@string/content_description_social_votes_count_for"
        app:srcCompat="@drawable/ic_thumb_up"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/vote_down"
        android:layout_width="@dimen/icon_size_large"
        android:layout_height="@dimen/icon_size_large"
        android:padding="@dimen/touchable_icon_padding"
        android:contentDescription="@string/content_description_social_votes_count_against"
        app:srcCompat="@drawable/ic_thumb_down"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/comments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_selector"
        android:minWidth="@dimen/min_touch_target_size"
        android:minHeight="@dimen/min_touch_target_size"
        android:orientation="vertical"
        app:constraint_referenced_ids="comment_count_icon,comment_count"
        app:flow_horizontalStyle="packed"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/upvotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_selector"
        android:minWidth="@dimen/min_touch_target_size"
        android:minHeight="@dimen/min_touch_target_size"
        android:orientation="vertical"
        app:constraint_referenced_ids="vote_up,vote_up_count"
        app:flow_horizontalStyle="packed"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/downvotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_selector"
        android:orientation="vertical"
        android:padding="64dp"
        app:constraint_referenced_ids="vote_down,vote_down_count"
        app:flow_horizontalStyle="packed"
        app:layout_constraintDimensionRatio="1:1"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/summary_flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:constraint_referenced_ids="comments,upvotes,downvotes"
        app:flow_horizontalGap="@dimen/flow_gap_horizontal"
        app:flow_horizontalStyle="spread"
        app:flow_verticalAlign="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/comments_recyclerview"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="title,summary_flow,comments_recyclerview"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="@dimen/flow_gap_horizontal"
        app:flow_horizontalStyle="spread"
        app:flow_verticalAlign="top"
        app:flow_verticalGap="@dimen/flow_gap_large"
        app:flow_verticalStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/create_comment_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/fab_margin_horizontal"
        android:layout_marginVertical="@dimen/fab_margin_vertical"
        app:icon="@drawable/ic_add_comment"
        android:text="@string/social_new_comment"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/create_comment_scrim"
        android:background="@color/DialogOverlay"
        android:elevation="32dp"
        android:visibility="gone"
        />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/create_comment_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/card_selector_bottomsheet"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/create_comment_title"
        android:layout_width="0dp"
        android:paddingTop="@dimen/card_header_padding_top"
        android:text="@string/social_compose_comment"
        style="@style/Text.Primary.H2"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:endIconMode="none"
        android:id="@+id/create_comment_edittext_wrapper"
        android:hint="@string/social_compose_comment"
        app:boxBackgroundMode="outline"
        app:boxStrokeErrorColor="@color/Negative"
        app:boxStrokeColor="@color/TextTertiary"
        app:hintEnabled="false"
        app:hintTextColor="@color/TextPrimary"
        app:counterTextColor="@color/TextPrimary"
        app:counterEnabled="true"
        app:counterMaxLength="@integer/social_comment_max_length"
        app:counterOverflowTextColor="@color/Negative">
        <com.google.android.material.textfield.TextInputEditText
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="5"
            android:gravity="top|start"
            android:id="@+id/create_comment_edittext"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_comment_submit"
        android:text="@string/social_comment_post"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Button.Flat"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/create_comment_flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:constraint_referenced_ids="create_comment_title,create_comment_edittext_wrapper,create_comment_submit"
        app:flow_lastHorizontalBias="1.0"
        app:flow_verticalAlign="baseline"
        app:flow_verticalGap="@dimen/flow_gap_large"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="823dp"
        />

    <org.beatonma.commons.app.ui.motionlayout.AlphaLayer
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/create_comment_alpha_layer"
        android:elevation="64dp"
        android:paddingStart="24dp"
        android:paddingEnd="12dp"
        app:constraint_referenced_ids="create_comment_title,create_comment_edittext_wrapper,create_comment_submit,create_comment_flow"
        />

</androidx.constraintlayout.motion.widget.MotionLayout>
