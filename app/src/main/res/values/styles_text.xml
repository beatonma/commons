<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textSize">@dimen/text_size_primary</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/TextSecondary</item>
        <item name="android:textSize">@dimen/text_size_secondary</item>
    </style>

    <style name="Text.Primary.Header">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:breakStrategy">high_quality</item>
        <item name="android:layout_marginBottom">@dimen/whitespace_header_below</item>
        <item name="android:layout_marginTop">@dimen/whitespace_header_above</item>
    </style>

    <style name="Text.Primary.H1" parent="Text.Primary.Header">
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>

    <style name="Text.Primary.H2">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="Text.Primary.H3">
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="Text.Primary.Condensed">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Text.Secondary.Condensed">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>



    <style name="Text.Primary.Quotation" parent="Text.Primary">
        <item name="android:textColor">@color/TextOpaque</item>
        <item name="android:fontWeight">600</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:padding">@dimen/whitespace_quotation_padding</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Text.Primary.Date" parent="Text.Primary.Condensed">

    </style>


    <style name="Text.Edit">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">top|start</item>
        <item name="android:minWidth">@dimen/touchable_min_size</item>
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textColorHint">@color/TextSecondary</item>
        <item name="android:textSize">@dimen/text_size_edit</item>
        <item name="android:textCursorDrawable">@null</item><!-- Use textColor for cursor -->
    </style>

    <style name="Text.Edit.Wrapper" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/TextField</item>
        <item name="boxStrokeColor">@color/TextTertiary</item>
        <item name="boxStrokeErrorColor">@color/Negative</item>
        <item name="counterOverflowTextColor">@color/Negative</item>
        <item name="counterTextColor">@color/TextPrimary</item>
        <item name="endIconMode">none</item>
        <item name="hintTextColor">@color/TextSecondary</item>
        <item name="android:paddingBottom">@dimen/flow_gap_large</item>
        <item name="android:paddingHorizontal">@dimen/whitespace_edge</item>
    </style>
</resources>
