<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Text styles
    -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textSize">@dimen/text_size_primary</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/TextSecondary</item>
        <item name="android:textSize">@dimen/text_size_secondary</item>
    </style>

    <style name="Text.Primary.Header">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:breakStrategy">high_quality</item>
        <item name="android:layout_marginBottom">@dimen/whitespace_header_below</item>
        <item name="android:layout_marginTop">@dimen/whitespace_header_above</item>
    </style>

    <style name="Text.Primary.H1" parent="Text.Primary.Header">
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>

    <style name="Text.Primary.H2">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="Text.Primary.H3">
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="Text.Primary.Header.NavigationView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Primary.Subheader">
        <item name="android:textSize">@dimen/text_size_subheader</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Text.Primary.Subheader.Single">
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.Primary.Single">
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.Secondary.Single">
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.Primary.Header.Card">
        <item name="android:paddingTop">@dimen/card_header_padding_top</item>
        <item name="android:paddingBottom">@dimen/whitespace_header_paragraph</item>
    </style>

    <style name="Text.Secondary.Preview">
        <item name="android:maxLines">3</item>
    </style>

    <style name="Text.Edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minWidth">@dimen/touchable_min_size</item>
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textColorHint">@color/TextSecondary</item>
        <item name="android:textSize">@dimen/text_size_edit</item>
    </style>

    <!-- A label for a view -->
    <style name="Text.Primary.Label">
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <!--<item name="android:textAlignment">center</item>-->
    </style>
    <!--
        End of Text styles
    -->
</resources>
