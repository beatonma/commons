<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Separator">
        <item name="android:background">@color/TextTertiary</item>
    </style>

    <style name="Separator.Vertical">
        <item name="android:layout_width">@dimen/separator_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">@dimen/separator_margin</item>
        <item name="android:layout_marginVertical">@dimen/separator_indent_vertical</item>
    </style>

    <style name="Separator.Horizontal">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:layout_marginHorizontal">@dimen/separator_indent_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/separator_margin</item>
    </style>
</resources>
