<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Card">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">@dimen/card_max_width</item>
    <item name="android:layout_marginStart">@dimen/card_margin_start</item>
    <item name="android:layout_marginTop">@dimen/card_margin_top</item>
    <item name="android:layout_marginEnd">@dimen/card_margin_end</item>
    <item name="android:layout_marginBottom">@dimen/card_margin_bottom</item>
    <item name="android:paddingStart">@dimen/card_padding_horizontal</item>
    <item name="android:paddingTop">@dimen/card_padding_top</item>
    <item name="android:paddingEnd">@dimen/card_padding_horizontal</item>
    <item name="android:paddingBottom">@dimen/card_padding_bottom</item>
    <item name="android:elevation">@dimen/card_elevation</item>
    <item name="android:background">@drawable/card_selector</item>
    <item name="android:stateListAnimator">@animator/raise</item>
    <item name="android:clickable">true</item>
    <item name="android:fitsSystemWindows">true</item>
  </style>

  <style name="Card.FullWidth">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginStart">0dp</item>
    <item name="android:layout_marginEnd">0dp</item>
    <item name="android:background">@drawable/card_selector_square</item>
  </style>

  <style name="Card.FullWidthOnSmall">
    <item name="android:layout_marginStart">0dp</item>
    <item name="android:layout_marginEnd">0dp</item>
    <item name="android:background">@drawable/card_selector_square</item>
  </style>

  <style name="Card.FullWidthOnSmall.Wrap">

  </style>

  <style name="Card.NoMargin">
    <item name="android:layout_marginTop">0dp</item>
    <item name="android:layout_marginBottom">0dp</item>
    <item name="android:layout_marginStart">0dp</item>
    <item name="android:layout_marginEnd">0dp</item>
    <item name="android:background">@drawable/card_selector_square</item>
  </style>

  <style name="Card.NoMargin.NoPadding">
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingEnd">0dp</item>
  </style>

  <style name="Card.NoPadding">
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingEnd">0dp</item>
  </style>
</resources>
