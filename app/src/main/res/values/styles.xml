<resources>

    <style name="Commons">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/Accent</item>

        <item name="RecyclerViewLoadingStyle">@style/CommonsLoadingStyle</item>
    </style>

    <style name="Commons.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/TextPrimaryLight</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        
        <item name="colorSecondary">@color/PrimaryDark</item>
        <item name="colorSecondaryVariant">?attr/colorSecondary</item>

        <item name="colorAccent">@color/Accent</item>

        <item name="colorError">@color/Negative</item>
        <item name="colorOnError">@color/TextPrimaryLight</item>
        
        <item name="colorSurface">@color/Card</item>
        <item name="colorOnSurface">@color/TextPrimary</item>
        
        <item name="android:colorBackground">@color/Tabletop</item>
        <item name="colorOnBackground">@color/TextPrimary</item>

        <item name="colorControlNormal">@color/TextSecondary</item>
        <item name="colorButtonNormal">?attr/colorSurface</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowBackground">@color/Tabletop</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>


        <item name="android:editTextColor">@color/TextPrimary</item>
        <item name="android:textColorHint">@color/TextSecondary</item>

        <item name="android:popupTheme">@style/Commons.Popup</item>
        <item name="extendedFloatingActionButtonStyle">@style/Commons.Fab</item>

    </style>

    <style name="CommonsLoadingStyle">
        <item name="loading_layout">@layout/vh_loading</item>
    </style>

    <style name="Text.Primary.Outline">
        <item name="android:shadowColor">@color/TextPrimaryInverted</item>
        <item name="android:shadowRadius">1.2</item>
    </style>

    <style name="ActionIcon">
        <item name="android:layout_width">@dimen/touchable_min_size</item>
        <item name="android:layout_height">@dimen/touchable_min_size</item>
        <item name="android:background">@drawable/round_selector</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/TextSecondary</item>
    </style>
</resources>
