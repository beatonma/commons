<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TransparentBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheet</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/SystemStatusBar</item>
        <item name="android:navigationBarColor">@color/SystemNavBar</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>

        <!-- From Commons.Theme -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/TextPrimaryLight</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>

        <item name="colorSecondary">@color/PrimaryDark</item>
        <item name="colorSecondaryVariant">?attr/colorSecondary</item>

        <item name="colorAccent">@color/Accent</item>

        <item name="colorError">@color/Negative</item>
        <item name="colorOnError">@color/TextPrimaryLight</item>

        <item name="colorSurface">@color/Card</item>
        <item name="colorOnSurface">@color/TextPrimary</item>

        <item name="android:colorBackground">@color/Tabletop</item>
        <item name="colorOnBackground">@color/TextPrimary</item>

        <item name="colorControlNormal">@color/TextSecondary</item>
        <item name="colorButtonNormal">?attr/colorSurface</item>
        <item name="android:popupTheme">@style/Commons.Popup</item>
        <item name="extendedFloatingActionButtonStyle">@style/Commons.Fab</item>
        <item name="android:buttonStyle">@style/Button.Outline</item>
        <item name="buttonStyle">@style/Button.Outline</item>
        <item name="materialButtonStyle">@style/Button.Outline</item>
    </style>

    <style name="TransparentBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/Transparent</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>
