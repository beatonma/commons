<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/state_signed_out"
        motion:constraintSetEnd="@+id/state_signed_in"
        motion:duration="@integer/animation_window_duration">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/state_signed_out">
        <Constraint
            android:id="@+id/account_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <Constraint
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <Constraint
            android:id="@+id/account_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <Constraint
            android:id="@+id/account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <Constraint
            android:id="@+id/signout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <Constraint
            android:id="@+id/rationale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            />
        <Constraint
            android:id="@+id/g_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            />

        <Constraint
            android:id="@+id/flow_signin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="rationale,g_sign_in_button"
            app:layout_constraintTop_toBottomOf="@+id/barrier_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:flow_lastHorizontalBias="1.0"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/state_signed_in">
        <Constraint
            android:id="@+id/account_avatar"
            android:layout_width="@dimen/user_avatar_size"
            android:layout_height="@dimen/user_avatar_size"
            android:layout_margin="@dimen/user_avatar_margin"
            app:layout_constraintTop_toBottomOf="@+id/barrier_header"
            app:layout_constraintBottom_toBottomOf="@+id/account_id"
            android:visibility="visible"
            />
        <Constraint
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/barrier_account_avatar"
            app:layout_constraintTop_toBottomOf="@+id/barrier_header"
            app:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0"
            android:textAlignment="viewStart"
            android:visibility="visible"
            />
        <Constraint
            android:id="@+id/account_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/barrier_account_avatar"
            app:layout_constraintTop_toBottomOf="@+id/account_name"
            app:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0"
            android:textAlignment="viewStart"
            android:visibility="visible"
            />
        <Constraint
            android:id="@+id/account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/barrier_account_avatar"
            app:layout_constraintTop_toBottomOf="@+id/account_username"
            app:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0"
            android:textAlignment="viewStart"
            android:visibility="visible"
            />
        <Constraint
            android:id="@+id/signout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/account_id"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/flow_gap_large"
            android:visibility="visible"
            />

        <Constraint
            android:id="@+id/rationale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <Constraint
            android:id="@+id/g_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <Constraint
            android:id="@+id/flow_signin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:constraint_referenced_ids="rationale,g_sign_in_button"
            />
    </ConstraintSet>
</MotionScene>
