<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/state_view_content"
        motion:constraintSetEnd="@+id/state_social_compose_comment"
        motion:duration="600">

       <KeyFrameSet>
           <!-- Scrim -->
           <KeyPosition
               motion:motionTarget="@+id/create_comment_scrim"
               motion:framePosition="1"
               motion:percentHeight="1.0"
               motion:percentX="1.0"
               motion:percentY="1.0"/>
           <KeyAttribute
               motion:motionTarget="@+id/create_comment_scrim"
               motion:framePosition="40"
               android:alpha="0.0"/>
           <!-- Scrim end -->

           <!-- FAB to compose comment background -->
           <KeyPosition
               motion:motionTarget="@+id/create_comment_background"
               motion:framePosition="20"
               motion:percentWidth=".0"
               motion:percentHeight=".0"
               motion:percentX=".0"
               motion:percentY=".0"
               />

           <KeyAttribute
               motion:motionTarget="@+id/create_comment_background"
               motion:framePosition="20"
               android:alpha=".4"
               />

           <KeyAttribute
               motion:motionTarget="@+id/create_comment_background"
               motion:framePosition="40"
               android:alpha="1.0"
               />

           <KeyPosition
               motion:motionTarget="@+id/create_comment_background"
               motion:framePosition="40"
               motion:percentWidth=".60"
               motion:percentHeight=".10"
               motion:percentX=".60"
               motion:percentY=".10"
               />

           <KeyPosition
               motion:motionTarget="@+id/create_comment_background"
               motion:framePosition="60"
               motion:percentWidth="1.0"
               motion:percentX="1.0"
               />
           <!-- End FAB to compose comment background -->

           <!-- Comment layer -->
           <KeyAttribute
               motion:motionTarget="@+id/create_comment_alpha_layer"
               motion:framePosition="80"
               android:alpha="0.0"/>

           <!-- End comment layer -->
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/state_view_content">
        <Constraint
            android:id="@+id/create_comment_scrim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.0"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <CustomAttribute
                motion:customDimension="0dp"
                motion:attributeName="elevation"/>
        </Constraint>

        <Constraint
            android:id="@+id/create_comment_flow"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/whitespace_edge"
            android:layout_marginEnd="@dimen/whitespace_edge"
            android:layout_marginBottom="@dimen/whitespace_edge"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <CustomAttribute
                motion:customDimension="0dp"
                motion:attributeName="elevation"/>
        </Constraint>

        <Constraint
            android:id="@+id/create_comment_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/create_comment_fab"
            app:layout_constraintBottom_toBottomOf="@+id/create_comment_fab"
            app:layout_constraintStart_toStartOf="@+id/create_comment_fab"
            app:layout_constraintEnd_toEndOf="@+id/create_comment_fab"
            >
            <CustomAttribute
                motion:attributeName="elevation"
                motion:customDimension="0dp"/>
            <CustomAttribute
                motion:attributeName="roundPercent"
                motion:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:id="@+id/create_comment_alpha_layer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.0"
            android:scaleX="@fraction/transition_scale_start"
            android:scaleY="@fraction/transition_scale_start"
            />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/state_social_compose_comment">

        <Constraint
            android:id="@+id/create_comment_scrim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <CustomAttribute
                motion:customDimension="32dp"
                motion:attributeName="elevation"/>
        </Constraint>

        <Constraint
            android:id="@+id/create_comment_flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/whitespace_edge"
            android:layout_marginEnd="@dimen/whitespace_edge"
            android:layout_marginBottom="@dimen/whitespace_edge"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/create_comment_background"
            app:layout_constraintEnd_toEndOf="@+id/create_comment_background"
            >
        </Constraint>

        <Constraint
            android:id="@+id/create_comment_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/create_comment_flow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <CustomAttribute
                motion:attributeName="elevation"
                motion:customDimension="48dp"/>

            <CustomAttribute
                motion:attributeName="roundPercent"
                motion:customFloatValue="0.00001" />

        </Constraint>

        <Constraint
            android:id="@+id/create_comment_alpha_layer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1.0"
            />

    </ConstraintSet>
</MotionScene>
