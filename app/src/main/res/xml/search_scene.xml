<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/hide_search_results"
        motion:constraintSetEnd="@+id/show_search_results"
        motion:duration="@integer/animation_search_duration">

       <KeyFrameSet>
           <KeyPosition
               motion:motionTarget="@+id/overlay"
               motion:framePosition="1"
               motion:percentWidth="1.0"
               motion:percentHeight="1.0"
               motion:percentX="1.0"
               motion:percentY="1.0"/>

           <KeyAttribute
               motion:motionTarget="@+id/overlay"
               motion:framePosition="40"
               android:alpha="0.0"/>

           <KeyAttribute
               motion:motionTarget="@+id/search_results_recyclerview"
               motion:framePosition="20"
               android:alpha="0.0"/>


       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/hide_search_results">
        <Constraint
            android:id="@+id/overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone" >
            <CustomAttribute
                motion:attributeName="elevation"
                motion:customDimension="16dp" />
        </Constraint>
        <Constraint
            android:id="@+id/search_results_recyclerview"
            android:elevation="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/toolbar"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_min_width"
            motion:layout_constraintWidth_min="@dimen/button_min_width"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:elevation="@dimen/toolbar_elevation" >
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/Transparent" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/show_search_results">
        <Constraint
            android:id="@+id/overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="1.0"
            android:visibility="visible" >
            <CustomAttribute
                motion:attributeName="elevation"
                motion:customDimension="16dp" />
        </Constraint>
        <Constraint
            android:id="@+id/search_results_recyclerview"
            android:elevation="24dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/toolbar"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"/>
        <Constraint
            android:id="@+id/toolbar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_min_width"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:elevation="25dp" >
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/SearchBar" />
        </Constraint>
    </ConstraintSet>
</MotionScene>
